<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.takeaway">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_36px"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_36px"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityAberturaChamado" />
        <activity android:name=".ActivityAtendente" />
        <activity android:name=".ActivityLogin" />
        <activity android:name=".ActivityDadosChamado" />
        <activity android:name=".ActivityResumoPedido" />
        <activity android:name=".ActivityCriarConta" />
        <activity android:name=".ActivityConfirmacao" />
        <activity android:name=".ActivityFinalizaCadastro" />
        <activity android:name=".ActivityVisualizacaoChamadosAtendente" />
        <activity android:name=".ActivityAmbienteAtendenteRelatorioOuChamado" />
        <activity android:name=".ActivityGerarRelatorio" />
        <activity android:name=".ActivityConfirmaPedido" />
        <activity android:name=".ActivityFormasDePagamento"></activity>
    </application>

</manifest>